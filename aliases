# mimic vim functions
alias :q='exit'

# vimrc editing
alias ve='vim ~/.vimrc'
alias vel='vim ~/.vimrc.local'

# zsh profile editing
alias ze='vim ~/.zshrc'

# Git Aliases
alias gs='git status'
alias gst='git stash'
alias gsp='git stash pop'
alias gsa='git stash apply'
alias gsh='git show'
alias gshw='git show'
alias gshow='git show'
alias gi='vim .gitignore'
alias ga='git add -A'
alias gap='git add -p'
alias guns='git unstage'
alias gunc='git uncommit'
alias gm='git merge'
alias gam='git amend --reset-author'
alias gr='git rebase'
alias gl='git l'
alias glg='git l'
alias glog='git l'
alias gf='git fetch'
alias gd='git diff'
alias gb='git branch'
alias gch='git checkout'
alias gp='git push origin'
alias gcm='git commit -m'

alias ka9='killall -9'
alias k9='kill -9'

alias pyv='pyenv version'

alias reload='exec $SHELL -l'

# Lock the screen (when going AFK)
alias afk="/System/Library/CoreServices/Menu\ Extras/User.menu/Contents/Resources/CGSession -suspend"
